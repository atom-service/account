// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
	"name": "AccountDevContainer",
	"service": "workspace",
	"dockerComposeFile": "docker-compose.yml",
	"workspaceFolder": "/workspaces/account",
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.Go",
				"zxh404.vscode-proto3",
				"ckolkman.vscode-postgres",
				"ms-vscode.makefile-tools",
				"aaron-bond.better-comments",
				"ms-azuretools.vscode-docker",
				"streetsidesoftware.code-spell-checker"
			],
			"settings": {
				"vscode-postgres": {
					"showExplorer": true,
					"defaultConnection": "postgresql://postgres:password@postgresql",
				},
				"cSpell.words": [
					"proto",
					"protoc",
					"proto",
					"yinxulai",
					"devcontainer",
					"Debugf",
					"Infof",
					"Warnf",
					"Errorf"
				],
				"protoc": {
					"compile_on_save": false,
					"options": [
						"--go_opt=paths=source_relative",
						"--go-grpc_opt=paths=source_relative",
						"--go_out=${workspaceRoot}/package/proto",
						"--go-grpc_out=${workspaceRoot}/package/proto",
						"--proto_path=${workspaceRoot}/package/proto"
					]
				}
			}
		}
	}
}
